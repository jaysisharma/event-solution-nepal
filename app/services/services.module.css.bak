.page {
    background-color: #ffffff;
    color: var(--neutral-dark);
    min-height: 100vh;
}

/* --- Hero Section (Light Editorial) --- */
.hero {
    padding: 12rem 0 6rem;
    position: relative;
    overflow: hidden;
    background-color: #fafafa;
}

.heroContent {
    max-width: 90rem;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 10;
}

.heroLabel {
    display: block;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--secondary);
    /* Brand Red */
    margin-bottom: 2rem;
    font-weight: 600;
}

.heroTitle {
    font-size: clamp(4rem, 10vw, 9rem);
    font-weight: 800;
    line-height: 0.9;
    letter-spacing: -0.03em;
    margin-bottom: 3rem;
    max-width: 1200px;
    color: #1a1a1a;
}

.heroSubtitle {
    font-size: clamp(1.2rem, 3vw, 1.8rem);
    color: #525252;
    max-width: 700px;
    line-height: 1.5;
    font-weight: 300;
}

/* --- Services List (Minimalist Blocks - Light) --- */
.servicesSection {
    padding: 0;
    background-color: #ffffff;
    position: relative;
}

.container {
    max-width: 90rem;
    margin: 0 auto;
    padding: 0 2rem;
}

/* --- Mobile Default (Stacked) --- */
.servicesWrapper {
    display: flex;
    flex-direction: column;
    padding: 4rem 2rem;
    gap: 4rem;
    width: 100%;
    max-width: 90rem;
    margin: 0 auto;
}

.serviceBlock {
    border-top: 1px solid #e5e5e5;
    padding-top: 2rem;
}

.imageContainer {
    position: relative;
    width: 100%;
    height: 300px;
    margin-top: 2rem;
    overflow: hidden;
    border-radius: 4px;
}

.serviceImage {
    object-fit: cover;
    width: 100%;
    height: 100%;
}

/* --- Desktop Pinning Layout (Min-Width 1024px) --- */
@media (min-width: 1024px) {
    .servicesWrapper {
        display: flex;
        /* GSAP Pinning works best with Flex */
        flex-direction: row;
        align-items: flex-start;
        /* Default alignment */
        justify-content: space-between;
        gap: 0;
        padding: 6rem 0 10rem;
        position: relative;
    }

    /* Left: Scrolling Content */
    .servicesContent {
        width: 45%;
        display: flex;
        flex-direction: column;
        gap: 10vh;
        z-index: 10;
    }

    .serviceBlock {
        border-top: 1px solid #e5e5e5;
        padding-top: 4rem;
        min-height: 70vh;
        /* Make each block tall enough */
        display: flex;
        flex-direction: column;
        justify-content: center;
        opacity: 0.3;
        transition: opacity 0.5s ease;
    }

    .serviceBlock.active {
        opacity: 1;
    }

    /* Right: Pinning Image Container */
    .servicesImages {
        width: 45%;
        height: 100vh;
        /* Full viewport height for pinning */
        /* NO sticky positioning here, GSAP handles it */
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        border-radius: 8px;
        position: relative;
        /* Context for absolute images */
    }

    .imageContainer {
        position: absolute;
        top: 50%;
        left: 0;
        width: 100%;
        height: 70vh;
        transform: translateY(-50%);
        margin: 0;
        border-radius: 8px;
        opacity: 1;
        visibility: hidden;
    }

    .imageContainer:first-child {
        visibility: visible;
    }

    .serviceBlockMobileImage {
        display: none;
    }
}

.serviceIndex {
    font-size: 1rem;
    color: var(--secondary);
    font-family: monospace;
    margin-bottom: 2rem;
    display: block;
}

.serviceTitle {
    font-size: clamp(3rem, 6vw, 5.5rem);
    font-weight: 800;
    line-height: 1;
    margin-bottom: 2rem;
    color: #1a1a1a;
}

.serviceDesc {
    font-size: 1.25rem;
    color: #525252;
    line-height: 1.6;
    margin-bottom: 3rem;
    max-width: 550px;
}

.serviceTags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
}

.tag {
    padding: 0.75rem 1.5rem;
    border: 1px solid #e5e5e5;
    border-radius: 999px;
    font-size: 0.875rem;
    color: #1a1a1a;
    background-color: transparent;
    transition: all 0.3s ease;
}

.tag:hover {
    background-color: #1a1a1a;
    color: #fff;
    border-color: #1a1a1a;
}

/* --- Process (Simple Steps - Light) --- */
.processSection {
    padding: 10rem 0;
    background-color: #f9fafb;
    /* Very light grey */
}

.sectionLabel {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #737373;
    margin-bottom: 4rem;
    display: block;
}

.processGrid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
}

@media (min-width: 768px) {
    .processGrid {
        grid-template-columns: repeat(4, 1fr);
        gap: 2rem;
    }
}

.processStep {
    position: relative;
}

.stepNumber {
    font-size: 5rem;
    font-weight: 800;
    color: #e5e5e5;
    line-height: 1;
    margin-bottom: 1rem;
}

.stepTitle {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: #1a1a1a;
}

.stepDesc {
    font-size: 0.95rem;
    color: #525252;
    line-height: 1.6;
}

/* --- FAQ (Minimal - Light) --- */
.faqSection {
    padding: 8rem 0;
    background-color: #ffffff;
}

.faqGrid {
    display: grid;
    gap: 0;
}

.faqItem {
    border-bottom: 1px solid #e5e5e5;
}

.faqQuestion {
    width: 100%;
    text-align: left;
    padding: 2rem 0;
    background: none;
    border: none;
    /* A11y Fix: Darker gray for contrast */
    color: #94a3b8;
    font-size: 1.25rem;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.faqAnswer {
    padding-bottom: 2rem;
    color: #525252;
    display: none;
    max-width: 700px;
    line-height: 1.6;
}

.faqItem.active .faqAnswer {
    display: block;
}

.faqIcon {
    color: #EB1F26;
    transition: transform 0.3s ease;
}

.faqItem.active .faqIcon {
    transform: rotate(45deg);
}

/* --- CTA (Light) --- */
.ctaSection {
    padding: 10rem 0 6rem;
    text-align: center;
    background-color: #ffffff;
}

.ctaTitle {
    font-size: clamp(3rem, 6vw, 6rem);
    font-weight: 800;
    line-height: 1;
    margin-bottom: 3rem;
    color: #1a1a1a;
}